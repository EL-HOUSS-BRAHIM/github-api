NODE_ENV=development

# Server
PORT=3000

# Database (MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=github_insights
DB_SSL_CA_PATH=
DB_SSL_REJECT_UNAUTHORIZED=true

# GitHub authentication
# Comma-separated list of personal access tokens. Leave blank to run with anonymous access limits.
GITHUB_TOKENS=

# Redis cache
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=
REDIS_TLS=false

# API hardening
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=120

# Queue startup behaviour
QUEUE_CLEANUP_MODE=nonprod
QUEUE_CLEANUP_STATUSES=
QUEUE_CLEANUP_GRACE_MS=600000

# Scheduler coordination
RANKING_LOCK_TTL_MS=3600000
