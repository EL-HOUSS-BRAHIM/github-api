{
  "name": "github-api",
  "version": "1.0.0",
  "description": "A backend API for collecting, processing, and serving GitHub data",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "concurrently \"nodemon src/server.js\" \"nodemon src/worker.js\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "worker": "node src/worker.js",
    "migrate": "sequelize-cli db:migrate",
    "db:drop": "sequelize db:drop",
    "db:create": "sequelize db:create",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "clear-cache": "node scripts/redis-cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EL-HOUSS-BRAHIM/github-api.git"
  },
  "keywords": [
    "github",
    "api",
    "nodejs",
    "express",
    "mysql",
    "redis",
    "data aggregation"
  ],
  "author": "EL-HOUSS-BRAHIM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EL-HOUSS-BRAHIM/github-api/issues"
  },
  "homepage": "https://github.com/EL-HOUSS-BRAHIM/github-api#readme",
  "dependencies": {
    "axios": "^1.6.7",
    "bull": "^4.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "ioredis": "^5.4.2",
    "mysql2": "^3.9.1",
    "node-cron": "^3.0.3",
    "redis": "^4.6.13",
    "sequelize": "^6.37.1",
    "swagger-ui-express": "^5.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.14.0",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
